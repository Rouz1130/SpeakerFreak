@model SpeakerFreak.Models.Review

@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Proceed too Delete this Review</h2>
    <hr />
    <br />
    <h3><b>Name:</b>&nbsp;@Html.DisplayFor(model => model.Name)</h3>
    <h3><b>Date:</b>&nbsp;@Html.DisplayFor(model => model.Date)</h3>
    <h3><b>Comments:</b>&nbsp;@Html.DisplayFor(model => model.Commments)</h3>
    <br />
    @using (Html.BeginForm())
    {
        <input type="submit" value="Delete" class= "btn btn-danger btn-md active"/>
   
    }
    <br />
    @Html.ActionLink("Back to Review", "Index","Review")
</div>
