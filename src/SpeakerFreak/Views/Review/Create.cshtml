@model SpeakerFreak.Models.Review

@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container space-lg">
    <h2>Add Review</h2>
    <hr />

@if (User.Identity.IsAuthenticated)
{
    <h4>Create Review</h4>

    @using (Html.BeginForm())
    {
        <div class="col-sm-4 col-lg-4 col-md-4">

            @Html.LabelFor(model => model.Name)<br />
            @Html.TextBoxFor(model => model.Name, new { @class = "form-group", placeholder = "Name" })
            <br /><br />
            @Html.LabelFor(model => model.Date)<br />
            @Html.TextBoxFor(model => model.Date, new { @class = "form-group", placeholder = "dd-mm-year" })
            <br /><br />
            @Html.LabelFor(model => model.Commments)
            @Html.TextBoxFor(model => model.Commments, new { @class = "form-control", style = "height: 70px;", placeholder = "Comments" })
            
            <br /><br />


            <input type="submit" value="Create" class="btn btn-primary" />
            <br />
            
            @Html.ActionLink("Return", "Index", "Review")
        </div>
        }
    }
    </div>

