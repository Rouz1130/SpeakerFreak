@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMusic.cshtml";
}

@using System.Security.Claims


      <div class="container">
        <h4>Register/Sign up</h4>
        <hr/>

        @if (User.Identity.IsAuthenticated)
        {

            <h3>Welcome Back:&nbsp; @User.Identity.Name</h3>


            @using (Html.BeginForm("LogOff", "Account", new { @class = "form-control", placeholder = "Log Out" }))
            {

              <input type="submit" class="btn btn-danger btn-lg" value="Log out"  />

                }
            }
            else
            {
            <p>@Html.ActionLink("Register", "Register")</p>
            <p>@Html.ActionLink("Log in", "Login")</p>
 
        }
       </div>
